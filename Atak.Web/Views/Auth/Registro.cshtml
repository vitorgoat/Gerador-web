@model Atak.Web.Models.RegistroViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - Gerenciador Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Bem-vindo ao Gerador Web</h1>
        <p class="lead">Complete seu registro para começar a usar o sistema.</p>
    </div>

    <div class="container">
        <div class="registration-container">
            <h2 class="registration-header">Registro</h2>
            <form asp-action="Registro" method="post">
                <div class="form-group">
                    <label for="NomeCompleto">Nome</label>
                    <input type="text" class="form-control" id="NomeCompleto" name="NomeCompleto" asp-for="NomeCompleto" placeholder="Digite seu nome" />
                    <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" placeholder="Digite seu melhor e-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Senha">Senha</label>
                    <input type="password" class="form-control" id="Senha" name="Senha" asp-for="Senha" placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    <div class="password-requirements">
                        <p><strong>Requisitos de Senha:</strong></p>
                        <ul>
                            <li>Deve ter pelo menos 8 caracteres</li>
                            <li>Deve conter uma letra maiúscula</li>
                            <li>Deve conter uma letra minúscula</li>
                            <li>Deve conter um número</li>
                            <li>Deve conter um caractere especial</li>
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ConfirmarSenha">Confirmar Senha</label>
                    <input type="password" class="form-control" id="ConfirmarSenha" name="ConfirmarSenha" asp-for="ConfirmarSenha" placeholder="Confirme sua senha" />
                    <span id="confirmPasswordFeedback" class="text-danger" style="display:none;">As senhas não coincidem.</span>
                </div>
                <button type="submit" class="btn btn-primary">Registrar</button>
                <div class="mt-3">
                    <p>Já tem uma conta? <a href="@Url.Action("Login", "Auth")" class="btn btn-link">Faça login</a></p>
                </div>
            </form>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/js/registro.js"></script>
</body>
</html>
